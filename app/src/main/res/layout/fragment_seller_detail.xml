<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/backgroundLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- כפתור חזרה -->
        <Button
            android:id="@+id/backToListButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/back"
            android:backgroundTint="@color/greenLight"
            android:textColor="@color/greenPrimary"
            android:layout_gravity="start" />

        <!-- כותרת -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seller_details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/greenPrimary"
            android:layout_marginBottom="24dp" />

        <!-- שם מוכר -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvSellerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seller_name"
                android:textColor="@color/greenPrimary"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- טלפון מוכר -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_call"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvSellerPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seller_number"
                android:textColor="@color/greenPrimary"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_directions"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvSellerAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tel_aviv"
                android:textColor="@color/greenPrimary"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/call_to_seller"
            android:backgroundTint="@color/greenPrimary"
            android:textColor="@color/white"
            android:drawableStart="@android:drawable/ic_menu_call"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>